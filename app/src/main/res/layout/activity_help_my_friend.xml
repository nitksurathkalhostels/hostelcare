<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HelpMyFriendActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Snow"
            tools:layout_editor_absoluteY="50dp"
            tools:layout_editor_absoluteX="5dp"
            >
        <EditText
                android:layout_width="340dp"
                android:layout_height="55dp"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/editText4"
                android:hint="Friend's Phone Number"
                android:layout_marginBottom="50dp"/>
        <EditText
                android:layout_width="395dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText5" android:paddingBottom="100dp" android:layout_marginBottom="50dp"
                android:hint="Message"/>
        <Button
                android:text="Submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button3" android:onClick="hmsf"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>