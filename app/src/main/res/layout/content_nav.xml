<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_nav"
        tools:context=".NavActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="50dp"
            tools:layout_editor_absoluteX="5dp"
            android:background="@color/lightblue4564">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Quote of the day"
                android:id="@+id/textView10"
                android:drawableLeft="@drawable/quote"
                android:textAlignment="viewStart"
                android:gravity="center" tools:ignore="RtlCompat"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="403dp"
                android:layout_height="133dp"
                android:layout_margin="1dp"
                android:background="@color/Snow"
                android:elevation="@dimen/elevate">

           <WebView android:layout_width="414dp"
                     android:layout_height="match_parent"
                     android:id="@+id/quote">

            </WebView>

        </LinearLayout>


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Hostels and Wardens"
                android:id="@+id/textView11"
                android:drawableLeft="@drawable/quote"
                android:textAlignment="viewStart"
                android:gravity="center" tools:ignore="RtlCompat"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="403dp"
                android:layout_height="435dp"
                android:layout_margin="1dp"
                android:background="@color/Snow"
                android:elevation="@dimen/elevate">

            <WebView android:layout_width="414dp"
                     android:layout_height="498dp"
                     android:id="@+id/wardens">


            </WebView>

        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>